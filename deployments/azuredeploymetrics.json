{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "sites_logzioMetricsFunctionApp_name": {
            "defaultValue": "[concat('logzioMFunctionApp', uniqueString(resourceGroup().id))]",
            "type": "String"
        },
        "storageAccounts_LogzioMetricsFailSafe_name": {
            "defaultValue": "[concat('logziomfs',uniqueString(resourceGroup().id))]",
            "type": "String"
        },
        "namespaces_LogzioMetricsNS_name": {
            "defaultValue": "[concat('LogzioMNS', uniqueString(resourceGroup().id))]",
            "type": "String"
        },
        "serverfarms_LogzioMetricsSP_name": {
            "defaultValue": "[concat('logzioMAppServicePlan', uniqueString(resourceGroup().id))]",
            "type": "String"
        },
        "storageAccounts_LogzioMetricsAppStorage_name": {
            "defaultValue": "[concat('logzmlog', uniqueString(resourceGroup().id))]",
            "type": "String"
        },
        "eventhubs_insights_operational_metrics_name": {
            "defaultValue": "insights-operational-metrics",
            "type": "String"
        },
        "AuthorizationRules_LogzioMetricsSharedAccessKey_name": {
            "defaultValue": "LogzioMSharedAccessKey",
            "type": "String"
        },
        "consumergroups_$Default_metrics_name": {
            "defaultValue": "LogzioMConsumerGroup",
            "type": "String"
        },
        "repoURL": {
            "defaultValue": "https://github.com/logzio/logzio-azure-serverless.git",
            "type": "String"
        },
        "branch": {
            "defaultValue": "master",
            "type": "String"
        },
        "LogzioMetricsHost": {
            "defaultValue": "listener.logz.io",
            "type": "String"
        },
        "LogzioMetricsToken": {
            "defaultValue": "Your Logzio metrics account token",
            "type": "String"
        }
    },
    "variables": {},
    "resources": [{
            "type": "Microsoft.EventHub/namespaces",
            "sku": {
                "name": "Standard",
                "tier": "Standard",
                "capacity": 1
            },
            "name": "[parameters('namespaces_LogzioMetricsNS_name')]",
            "apiVersion": "2017-04-01",
            "location": "[resourceGroup().location]",
            "tags": {},
            "scale": null,
            "properties": {
                "isAutoInflateEnabled": true,
                "maximumThroughputUnits": 20,
                "provisioningState": "Succeeded"
            },
            "dependsOn": []
        },
        {
            "type": "Microsoft.Storage/storageAccounts",
            "sku": {
                "name": "Standard_RAGRS",
                "tier": "Standard"
            },
            "kind": "Storage",
            "name": "[parameters('storageAccounts_LogzioMetricsFailSafe_name')]",
            "apiVersion": "2019-04-01",
            "location": "[resourceGroup().location]",
            "properties": {
                "encryption": {
                    "services": {
                        "file": {
                            "enabled": true
                        },
                        "blob": {
                            "enabled": true
                        }
                    },
                    "keySource": "Microsoft.Storage"
                }
            },
            "dependsOn": []
        },
        {
            "type": "Microsoft.Storage/storageAccounts",
            "sku": {
                "name": "Standard_LRS",
                "tier": "Standard"
            },
            "kind": "Storage",
            "name": "[parameters('storageAccounts_LogzioMetricsAppStorage_name')]",
            "apiVersion": "2019-04-01",
            "location": "[resourceGroup().location]",
            "properties": {
                "encryption": {
                    "services": {
                        "file": {
                            "enabled": true
                        },
                        "blob": {
                            "enabled": true
                        }
                    },
                    "keySource": "Microsoft.Storage"
                }
            },
            "dependsOn": []
        },
        {
            "type": "Microsoft.Web/serverfarms",
            "sku": {
                "name": "Y1",
                "tier": "Dynamic",
                "size": "Y1",
                "family": "Y",
                "capacity": 0
            },
            "kind": "functionapp",
            "name": "[parameters('serverfarms_LogzioMetricsSP_name')]",
            "apiVersion": "2016-09-01",
            "location": "[resourceGroup().location]",
            "scale": null,
            "properties": {
                "name": "[parameters('serverfarms_LogzioMetricsSP_name')]",
                "workerTierName": null,
                "adminSiteName": null,
                "hostingEnvironmentProfile": null,
                "perSiteScaling": false,
                "reserved": false,
                "targetWorkerCount": 0,
                "targetWorkerSizeId": 0
            },
            "dependsOn": []
        },
        {
            "type": "Microsoft.Web/sites",
            "kind": "functionapp",
            "name": "[parameters('sites_logzioMetricsFunctionApp_name')]",
            "apiVersion": "2016-08-01",
            "location": "[resourceGroup().location]",
            "scale": null,
            "properties": {
                "enabled": true,
                "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', parameters('serverfarms_LogzioMetricsSP_name'))]",
                "reserved": false,
                "httpsOnly": true,
                "siteConfig": {
                    "appSettings": [{
                            "name": "FUNCTIONS_EXTENSION_VERSION",
                            "value": "~1"
                        },
                        {
                            "name": "FUNCTIONS_WORKER_RUNTIME",
                            "value": "node"
                        },
                        {
                            "name": "FUNCTION_APP_EDIT_MODE",
                            "value": "readwrite"
                        },
                        {
                            "name": "Project",
                            "value": "dist/metrics/"
                        },
                        {
                            "name": "AzureWebJobsStorage",
                            "value": "[concat('DefaultEndpointsProtocol=https;AccountName=', parameters('storageAccounts_LogzioMetricsAppStorage_name'), ';AccountKey=', listKeys(resourceId('Microsoft.Storage/storageAccounts', parameters('storageAccounts_LogzioMetricsAppStorage_name')),'2015-05-01-preview').key1)]"
                        },
                        {
                            "name": "AzureWebJobsDashboard",
                            "value": "[concat('DefaultEndpointsProtocol=https;AccountName=', parameters('storageAccounts_LogzioMetricsAppStorage_name'), ';AccountKey=', listKeys(resourceId('Microsoft.Storage/storageAccounts', parameters('storageAccounts_LogzioMetricsAppStorage_name')),'2015-05-01-preview').key1)]"
                        },
                        {
                            "name": "LogzioMetricsHost",
                            "value": "[parameters('LogzioMetricsHost')]"
                        },
                        {
                            "name": "AzureEventHubMetricsConnectionString",
                            "value": "[listkeys(resourceId('Microsoft.EventHub/namespaces/authorizationRules', parameters('namespaces_LogzioMetricsNS_name'),parameters('AuthorizationRules_LogzioMetricsSharedAccessKey_name')), '2017-04-01').primaryConnectionString]"
                        },
                        {
                            "name": "MetricsStorageConnectionString",
                            "value": "[concat('DefaultEndpointsProtocol=https;AccountName=', parameters('storageAccounts_LogzioMetricsFailSafe_name'), ';AccountKey=', listKeys(resourceId('Microsoft.Storage/storageAccounts', parameters('storageAccounts_LogzioMetricsFailSafe_name')),'2015-05-01-preview').key1,';EndpointSuffix=core.windows.net')]"
                        },
                        {
                            "name": "LogzioMetricsToken",
                            "value": "[parameters('LogzioMetricsToken')]"
                        }
                    ]
                }
            },
            "resources": [{
                "apiVersion": "2015-08-01",
                "name": "web",
                "type": "sourcecontrols",
                "dependsOn": [
                    "[resourceId('Microsoft.Web/sites/', parameters('sites_logzioMetricsFunctionApp_name'))]"
                ],
                "properties": {
                    "RepoUrl": "[parameters('repoURL')]",
                    "branch": "[parameters('branch')]",
                    "IsManualIntegration": true
                }
            }],
            "dependsOn": [
                "[resourceId('Microsoft.Web/serverfarms', parameters('serverfarms_LogzioMetricsSP_name'))]",
                "[resourceId('Microsoft.Storage/storageAccounts', parameters('storageAccounts_LogzioMetricsAppStorage_name'))]",
                "[concat('Microsoft.EventHub/namespaces/', parameters('namespaces_LogzioMetricsNS_name'))]"
            ]
        },
        {
            "type": "Microsoft.EventHub/namespaces/AuthorizationRules",
            "name": "[concat(parameters('namespaces_LogzioMetricsNS_name'), '/', parameters('AuthorizationRules_LogzioMetricsSharedAccessKey_name'))]",
            "apiVersion": "2017-04-01",
            "location": "[resourceGroup().location]",
            "scale": null,
            "properties": {
                "rights": [
                    "Listen",
                    "Manage",
                    "Send"
                ]
            },
            "dependsOn": [
                "[resourceId('Microsoft.EventHub/namespaces', parameters('namespaces_LogzioMetricsNS_name'))]"
            ]
        },
        {
            "type": "Microsoft.EventHub/namespaces/eventhubs",
            "name": "[concat(parameters('namespaces_LogzioMetricsNS_name'), '/', parameters('eventhubs_insights_operational_metrics_name'))]",
            "apiVersion": "2017-04-01",
            "location": "[resourceGroup().location]",
            "scale": null,
            "properties": {
                "messageRetentionInDays": 7,
                "partitionCount": 4,
                "status": "Active",
                "partitionIds": [
                    "0",
                    "1",
                    "2",
                    "3"
                ]
            },
            "dependsOn": [
                "[resourceId('Microsoft.EventHub/namespaces', parameters('namespaces_LogzioMetricsNS_name'))]"
            ]
        },
        {
            "type": "Microsoft.EventHub/namespaces/eventhubs/consumergroups",
            "name": "[concat(parameters('namespaces_LogzioMetricsNS_name'), '/', parameters('eventhubs_insights_operational_metrics_name'), '/', parameters('consumergroups_$Default_metrics_name'))]",
            "apiVersion": "2017-04-01",
            "location": "[resourceGroup().location]",
            "scale": null,
            "properties": {},
            "dependsOn": [
                "[resourceId('Microsoft.EventHub/namespaces', parameters('namespaces_LogzioMetricsNS_name'))]",
                "[resourceId('Microsoft.EventHub/namespaces/eventhubs', parameters('namespaces_LogzioMetricsNS_name'), parameters('eventhubs_insights_operational_metrics_name'))]"
            ]
        }
    ]
}
